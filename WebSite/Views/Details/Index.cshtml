@{
    ViewData["Title"] = "Haber Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Report

<style>
    .report-image {
        display: flex;
        justify-content: center; /* Fotoğrafı yatayda ortalar */
        align-items: center; /* Fotoğrafı dikeyde ortalar */
        height: 400px; /* Fotoğraf yüksekliği */
        width: 400px; /* Fotoğraf genişliği */
        overflow: hidden; /* Fotoğraf taşarsa gizle */
        margin: 0 auto; /* Sayfada ortalamak için */
        border-radius: 8px; /* Hafif yuvarlak köşeler */
    }

        .report-image img {
            width: 100%; /* Fotoğrafın genişliğini kapsayıcıya göre ayarla */
            height: 100%; /* Yüksekliği kapsayıcıya göre ayarla */
            object-fit: cover; /* Fotoğrafın oranını koruyarak, kapsayıcıya sığacak şekilde kırpma yap */
        }

    .report-detail h1 {
        font-size: 36px; /* Başlık fontunu büyüt */
        font-weight: bold; /* Başlık kalın olsun */
        text-align: center; /* Başlık ortalanmış */
    }

    .report-content p {
        font-size: 18px; /* İçerik yazısını büyüt */
        line-height: 1.6; /* Satır aralığını aç */
        margin-top: 20px; /* İçeriğe biraz boşluk bırak */
    }

    .author-info p {
        font-size: 16px; /* Yazar ismi yazısını büyüt */
        font-style: italic; /* Yazar ismini italik yap */
        text-align: center; /* Yazar ismini ortala */
        margin-top: 20px; /* Yazar bilgisinin üstüne boşluk ekle */
    }

    footer {
        text-align: center;
        font-size: 14px; /* Altbilgi yazısını küçült */
        margin-top: 40px; /* Altbilgiye boşluk ekle */
    }
</style>

<div class="report-detail">
    <!-- Başlık -->
    <h1>@Model.Title</h1>

    <!-- Fotoğraf (varsa) -->
    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
    {
        <div class="report-image">
            <img src="@Url.Content("~" + Model.PhotoUrl)" alt="@Model.Title" class="img-fluid" />
        </div>
    }

    <!-- İçerik -->
    <div class="report-content">
        <p>@Model.Content</p>
    </div>

    <!-- Yazar Adı -->
    <div class="author-info">
        <p><strong>Yazar:</strong> @Model.AuthorName</p>
    </div>

