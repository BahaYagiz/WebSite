@{
    ViewData["Title"] = "Haber Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Report

<style>
    .report-image {
        display: flex;
        justify-content: center; /* Fotoğrafı yatayda ortalar */
        align-items: center; /* Fotoğrafı dikeyde ortalar */
        height: 750px; /* Yüksekliği sınırlayarak kare yap */
        width: 750px; /* Genişliği sınırlayarak kare yap */
        overflow: hidden; /* Fotoğraf taşarsa gizle */
        margin: 0 auto; /* Sayfada ortalamak için */
    }

        .report-image img {
            width: 100%; /* Fotoğrafın genişliğini kapsayıcıya göre ayarla */
            height: 100%; /* Yüksekliği kapsayıcıya göre ayarla */
            object-fit: cover; /* Fotoğrafın oranını koruyarak, kapsayıcıya sığacak şekilde kırpma yap */
        }
</style>

<div class="report-detail">
    <!-- Başlık -->
    <h1>@Model.Title</h1>

    <!-- Fotoğraf (varsa) -->
    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
    {
        <div class="report-image">
            <img src="@Url.Content("~" + Model.PhotoUrl)" alt="@Model.Title" class="img-fluid" />
        </div>
    }

    <!-- İçerik -->
    <div class="report-content">
        <p>@Model.Content</p>
    </div>

    <!-- Yazar Adı -->
    <div class="author-info">
        <p><strong>Yazar:</strong> @Model.AuthorName</p>
    </div>

    <!-- Altbilgi (Footer) -->
    <footer>
        <p>&copy; 2024 - WebSite</p>
    </footer>
</div>
