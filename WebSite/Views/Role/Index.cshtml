
@{
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <div class="card-header d-flex align-items-center justify-content-between bg-light">
        <h5 class="mb-0 text-primary">Roller</h5>
    </div>
}

@model List<RoleModel>

<a asp-action="Add" asp-controller="Role" class="btn btn-primary btn-sm mb-2">Yeni Rol Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rol Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


