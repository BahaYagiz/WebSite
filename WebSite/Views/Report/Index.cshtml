@{
    Layout = "_LayoutAdmin";
}

@section CardHeader {
    <div class="card-header d-flex align-items-center justify-content-between bg-light">
        <h5 class="mb-0 text-primary">Haberler</h5>
    </div>
}

@model List<ReportModel>

<a asp-action="Add" asp-controller="Report" class="btn btn-primary btn-sm mb-3">Yeni Haber Ekle</a>

@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-3">Henüz Haber Eklenmedi!</div>
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <hr />
        <div class="card-body">
            <div class="table-responsive">
                <table style="width: 100%; border-collapse: collapse; border: 1px solid #ddd; background-color: #fff;">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th style="padding: 10px; text-align: center;">Id</th>
                            <th style="padding: 10px; text-align: center;">Başlık</th>
                            <th style="padding: 10px; text-align: center;">Açıklama</th>
                            <th style="padding: 10px; text-align: center;">Kategori</th>
                            <th style="padding: 10px; text-align: center;">Yazar</th>
                            <th style="padding: 10px; text-align: center;">Durum</th>
                            <th colspan="2" style="padding: 10px; text-align: center;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr style="border-bottom: 1px solid #ddd;">
                                <td style="padding: 10px; text-align: center;">@report.Id</td>
                                <td style="padding: 10px; text-align: center;">@report.Title</td>
                                <td style="padding: 10px; text-align: center;">@report.Description</td>
                                <td style="padding: 10px; text-align: center;">@report.CategoryId</td>
                                <td style="padding: 10px; text-align: center;">@report.AuthorName</td>
                                <td style="padding: 10px; text-align: center;">
                                    @if (report.IsActive)
                                    {
                                        <span class="badge bg-success text-white">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-white">Pasif</span>
                                    }
                                </td>
                                <td colspan="2" style="padding: 10px; text-align: left;">
                                    <a asp-action="Update" asp-controller="Report" class="btn btn-warning btn-sm mx-1" asp-route-id="@report.Id">
                                        Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-controller="Report" class="btn btn-danger btn-sm mx-1" asp-route-id="@report.Id">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
