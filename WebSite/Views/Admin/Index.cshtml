
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Motivasyonel Alıntılar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .motivation-card {
            background-color: #f9f9f9;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .motivation-card p {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
        }
        .motivation-card footer {
            text-align: right;
            font-style: italic;
            color: #555;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="motivation-card">
                <p>"Başarı, küçük çabaların tekrarıdır." </p>
                <footer>- Anonim</footer>
            </div>
        </div>
        <div class="col-md-6 mt-4 mt-md-0">
            <div class="motivation-card">
                <p>"Bugün yapabileceğin şeyleri erteleme." </p>
                <footer>- John C. Maxwell</footer>
            </div>
        </div>
        <div class="col-md-6 mt-4">
            <div class="motivation-card">
                <p>"Başarı, cesaretin ve azmin birleşimidir." </p>
                <footer>- Winston Churchill</footer>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



