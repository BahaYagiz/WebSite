@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<ReportModel>

<div class="container mt-4">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card shadow-sm h-100 card-hover">
                    <!-- Ana Kart -->
                    <img src="@Url.Content("~" + item.PhotoUrl)" alt="@item.Title" class="card-img-top img-fluid" style="height: 150px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 1.5rem;">@item.Title</h5> <!-- Yazı büyütüldü -->
                        <p class="card-text" style="font-size: 1.1rem;">@item.Description</p> <!-- Yazı büyütüldü -->
                        <p class="text-muted">Yazar: @item.AuthorName</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Details" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">Daha Fazla</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<footer class="bg-dark text-white text-center py-3 mt-4">
    <p>&copy; 2024 Haber Sitesi. Tüm hakları saklıdır.</p>
</footer>

<!-- CSS -->
<style>
    /* Kartların ortada durmasını sağlar */
    .row {
        display: flex;
        justify-content: center;
    }

    .card-hover {
        transition: transform 0.3s ease-in-out; /* Hoverda kartın hareket etmesini sağlar */
    }

        /* Kartın üzerine gelindiğinde efekt */
        .card-hover:hover {
            transform: translateY(-10px); /* Yukarıya doğru hareket */
        }

    /* Eğer ana kartı vurgulamak isterseniz, ekstra stil ekleyebilirsiniz */
    .col-lg-4:first-child .card {
        border: 2px solid #007bff; /* Ana karta özel sınır rengi */
        box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3); /* Ana karta özel gölge */
    }
</style>
